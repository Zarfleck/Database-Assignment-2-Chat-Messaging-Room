<%- include("templates/header") %> 
<body class="bg-teal-500">
    <div class="flex justify-center space-x-6 mt-24">
        <div class="bg-green-400 p-2 rounded-md shadow-md shadow-black">
            Current Users in the room:
            <% usersInRoom.forEach(user => { %>
                <div class="flex bg-orange-400 p-2 rounded-md shadow-md shadow-black my-2 justify-center">
                    <%= user.username %>
                </div>
            <% }); %>
        </div>
        <div class="bg-green-400 p-2 rounded-md shadow-md shadow-black">
            Users not in the room:
            <form action="/addUsersToCurrentRoom" method="post" class="flex-col">
                <% usersNotInRoom.forEach(user => { %>
                    <div class="flex flex-row bg-orange-400 my-4 p-2 rounded-md shadow-sm shadow-black">
                        <input type="checkbox" id="user<%= user.user_id %>" name="addedUsers" value="<%= user.user_id %>">
                        <label class="px-1" for="user<%= user.user_id %>"><%= user.username %></label><br>
                    </div>
                <% }); %>
                <input class="border border-black bg-white p-1 bg-yellow-400 rounded-lg shadow-black shadow-sm" type="submit" value="Add Users" />
            </form>
        </div>
    </div>
</body>

<%- include("templates/footer") %> 